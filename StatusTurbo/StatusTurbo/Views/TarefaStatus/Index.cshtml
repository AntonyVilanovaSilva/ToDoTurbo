@model IEnumerable<StatusTurbo.Models.TarefaStatus>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Criar Novo", "Criar")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DescricaoStatus)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DescricaoStatus)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.IdStatus }) |
            @Html.ActionLink("Detalhes", "Detalhes", new { id=item.IdStatus }) |
            @Html.ActionLink("Deletar", "Deletar", new { id=item.IdStatus })
        </td>
    </tr>
}

</table>
